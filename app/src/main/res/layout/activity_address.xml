<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/mainscreen"
    tools:context=".Address">


    <AutoCompleteTextView
        android:id="@+id/Add1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Address 1"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="bottom|left"
        android:layout_above="@+id/Add2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:id="@+id/Add2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Address 2"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:gravity="bottom|left"
        android:singleLine="true"
        android:layout_above="@+id/GoButton"
        android:layout_alignStart="@+id/Add1" />



    <ImageView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Find MidWayz"
        android:id="@+id/GoButton"
        android:layout_marginTop="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:src="@drawable/button"
        />

    <ImageView
        android:layout_width= "298dp"
        android:layout_height="67dp"
        android:src="@drawable/midwayz"
        android:id="@+id/ivLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCurrentLocat"
        android:src="@drawable/currentlocation"
        android:layout_above="@+id/Add2"
        android:linksClickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Add1"
        android:layout_toEndOf="@+id/ivLogo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BetaTag"
        android:text="BETA"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

